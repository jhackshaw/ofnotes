    "@types/node": "^14.0.5",
    "@types/react": "^16.9.35",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.0.0",
    "@types/react-router-dom": "^5.1.5",
    "@types/showdown": "^1.9.3",
    "clsx": "^1.1.0",
    "dexie": "^3.0.1",
    "fake-indexeddb": "^3.0.1",
    "highlight.js": "^10.0.3",
    "markdown-to-jsx": "^6.11.4",
    "moment": "^2.26.0",
    "prettier": "^2.0.5",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-ga": "^2.7.0",
