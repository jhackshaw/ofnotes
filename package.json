    "typescript": "^3.9.3"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "format": "prettier --loglevel warn --write \"src/**/*.+(ts|tsx|js|jsx|json|yml|yaml|css|md)\"",
    "format:check": "prettier --check \"src/**/*.+(ts|tsx|js|jsx|json|yml|yaml|css|md)\""
  },
  "eslintConfig": {
    "extends": "react-app"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "/node_modules/",
      "serviceWorker.ts",
      "react-app-env.d.ts",
      "src/index.tsx",
      "src/test-utils.tsx",
      "src/pages/App.tsx",
      "src/db/initialNotes.ts",
      "src/components/.*index.ts",
      "src/hooks/index.ts",
      "src/pages/index.ts",
      "src/db/index.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "lines": 90
      }
    }
  }
}
